<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sixlab.sixtools.comun.mapper.SeisPlanMapper">
    <resultMap id="BaseResultMap" type="cn.sixlab.sixtools.comun.bean.SeisPlan" >
        <id     column="id"               property="id"             jdbcType="INTEGER" />
        <result column="plan_name"        property="planName"       jdbcType="VARCHAR" />
        <result column="plan_date"        property="planDate"       jdbcType="VARCHAR"/>
        <result column="plan_time"        property="planTime"       jdbcType="VARCHAR" />
        <result column="plan_status"      property="planStatus"     jdbcType="VARCHAR" />
        <result column="plan_status_name" property="planStatusName" jdbcType="VARCHAR"/>
        <result column="plan_content"     property="planContent"    jdbcType="VARCHAR" />
        <result column="plan_type"        property="planType"       jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
        id, plan_name, plan_date, plan_time, plan_status, plan_content, plan_type
    </sql>

    <insert id="insert" keyProperty="id" parameterType="cn.sixlab.sixtools.comun.bean.SeisPlan" useGeneratedKeys="true">
        insert into seis_plan
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="planName    != null"> plan_name,    </if>
            <if test="planTime    != null"> plan_time,    </if>
            <if test="planStatus  != null"> plan_status,  </if>
            <if test="planContent != null"> plan_content, </if>
            <if test="planType    != null"> plan_type,    </if>
            <if test="planDate    != null"> plan_date,    </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="planName    != null"> #{planName,    jdbcType=VARCHAR}, </if>
            <if test="planTime    != null"> #{planTime,    jdbcType=VARCHAR}, </if>
            <if test="planStatus  != null"> #{planStatus,  jdbcType=VARCHAR}, </if>
            <if test="planContent != null"> #{planContent, jdbcType=VARCHAR}, </if>
            <if test="planType    != null"> #{planType,    jdbcType=VARCHAR}, </if>
            <if test="planDate    != null"> #{planDate,    jdbcType=VARCHAR}, </if>
        </trim>
    </insert>
    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        ,(CASE plan_status WHEN 100 THEN '未完成' WHEN 300 THEN '已完成' WHEN 400
        THEN '进行中' END) plan_status_name
        from
        seis_plan
        where
        id = #{id,jdbcType=INTEGER}
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete from
        seis_plan
        where
        id = #{id,jdbcType=INTEGER}
    </delete>
    <update id="update" parameterType="cn.sixlab.sixtools.comun.bean.SeisPlan">
        update seis_plan
        <set>
            <if test="planName    != null"> plan_name    = #{planName,    jdbcType=VARCHAR},  </if>
            <if test="planTime    != null"> plan_time    = #{planTime,    jdbcType=VARCHAR},  </if>
            <if test="planDate    != null"> plan_date    = #{planDate,    jdbcType=VARCHAR},  </if>
            <if test="planStatus  != null"> plan_status  = #{planStatus,  jdbcType=VARCHAR},  </if>
            <if test="planContent != null"> plan_content = #{planContent, jdbcType=VARCHAR},  </if>
            <if test="planType    != null"> plan_type    = #{planType,    jdbcType=VARCHAR},  </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>


    <!---->
    <select id="selectByPlan" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
        select
        <include refid="Base_Column_List" />
        ,(CASE plan_status WHEN 100 THEN '未完成' WHEN 300 THEN '已完成' WHEN 400
        THEN '进行中' END) plan_status_name
        from seis_plan
        where 1=1
        <if test="planName    != null" > AND plan_name    = #{planName,    jdbcType=VARCHAR} </if>
        <if test="planTime    != null" > AND plan_time    = #{planTime,    jdbcType=VARCHAR} </if>
        <if test="planStatus  != null" > AND plan_status  = #{planStatus,  jdbcType=VARCHAR} </if>
        <if test="planContent != null" > AND plan_content = #{planContent, jdbcType=VARCHAR} </if>
        <if test="planType    != null" > AND plan_type    = #{planType,    jdbcType=VARCHAR} </if>
        <if test="planDate    != null" > AND plan_date    = #{planDate,    jdbcType=VARCHAR} </if>
        order BY plan_type desc,id DESC
    </select>

</mapper>