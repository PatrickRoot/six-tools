            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-alerta</artifactId>
                <version>${version.seis}</version>
            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-bandeja</artifactId>
                <version>${version.seis}</version>
            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-bloc</artifactId>
                <version>${version.seis}</version>
            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-encode</artifactId>
                <version>${version.seis}</version>
            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
