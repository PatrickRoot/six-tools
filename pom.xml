            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-plan</artifactId>
                <version>${version.seis}</version>
            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-punto</artifactId>
                <version>${version.seis}</version>
            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-resolverpelicula</artifactId>
                <version>${version.seis}</version>
            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-tarea</artifactId>
                <version>${version.seis}</version>
            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-tomcat</artifactId>
                <version>${version.seis}</version>
            </dependency>
            <dependency>
                <groupId>cn.sixlab</groupId>
                <artifactId>seis-update</artifactId>
                <version>${version.seis}</version>
            </dependency>

            <!-- junit -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${version.junit}</version>
                <scope>test</scope>
            </dependency>

            <!-- 数据库 -->
            <!-- Sqlite -->
            <dependency>
                <groupId>org.xerial</groupId>
                <artifactId>sqlite-jdbc</artifactId>
                <version>${version.sqlite}</version>
            </dependency>

            <!-- nutz -->
            <dependency>
                <groupId>org.nutz</groupId>
                <artifactId>nutz</artifactId>
                <version>${version.nutz}</version>
            </dependency>

            <!-- jsoup -->
            <dependency>
                <groupId>org.jsoup</groupId>
                <artifactId>jsoup</artifactId>
                <version>${version.jsoup}</version>
            </dependency>

            <!-- log -->
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>${version.commons.logging}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${version.slf4j.api}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-log4j12</artifactId>
                <version>${version.slf4j.log4j12}</version>
                <scope>runtime</scope>
            </dependency>
            <dependency>
                <groupId>log4j</groupId>
                <artifactId>log4j</artifactId>
