<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.eu.sixlab</groupId>
    <artifactId>sixtools</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>
    <name>SixTools</name>
    <url>http://maven.apache.org</url>

    <modules>
        <module>sixtools-common</module>
        <module>sixtray</module>
        <module>movie-recorder</module>
        <module>sixplan</module>
    </modules>

    <properties>
        <version.sixtools>${project.version}</version.sixtools>

        <version.sixutil>1.0-SNAPSHOT</version.sixutil>

        <version.junit>4.11</version.junit>

        <version.controlsfx>8.20.8</version.controlsfx>
        <version.openjfx>1.0.3</version.openjfx>

        <version.commons.collections>3.2.1</version.commons.collections>
        <version.commons.fileupload>1.3.1</version.commons.fileupload>
        <version.commons.logging>1.1.1</version.commons.logging>
        <version.commons.lang3>3.1</version.commons.lang3>
        <version.commons.codec>1.8</version.commons.codec>
        <version.commons.net>3.3</version.commons.net>
        <version.commons.io>1.3.2</version.commons.io>

        <version.slf4j.log4j12>1.7.5</version.slf4j.log4j12>
        <version.slf4j.api>1.7.5</version.slf4j.api>
        <version.log4j>1.2.17</version.log4j>

        <version.mybatis>3.2.7</version.mybatis>
        <version.sqlite>3.8.7</version.sqlite>

        <version.beanshell>2.0b5</version.beanshell>
        <version.poiooxml>3.10.1</version.poiooxml>
        <version.fastjson>1.2.3</version.fastjson>
        <version.pinyin4j>2.5.0</version.pinyin4j>
        <version.jackson>1.7.1</version.jackson>
        <version.poi>3.10-FINAL</version.poi>
        <version.jsoup>1.7.3</version.jsoup>
        <version.dom4j>1.6.1</version.dom4j>
        <version.guava>17.0</version.guava>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- Six -->
            <dependency>
                <groupId>org.eu.sixlab</groupId>
                <artifactId>sixtools-common</artifactId>
                <version>${version.sixtools}</version>
            </dependency>
            <dependency>
                <groupId>org.eu.sixlab</groupId>
                <artifactId>sixtray</artifactId>
                <version>${version.sixtools}</version>
            </dependency>
            <dependency>
                <groupId>org.eu.sixlab</groupId>
                <artifactId>movierecorder</artifactId>
                <version>${version.sixtools}</version>
            </dependency>
            <dependency>
                <groupId>org.eu.sixlab</groupId>
                <artifactId>sixplan</artifactId>
                <version>${version.sixtools}</version>
            </dependency>

            <!-- SixUtil -->
            <dependency>
                <groupId>org.eu.sixlab</groupId>
                <artifactId>sixutil</artifactId>
                <version>${version.sixutil}</version>
            </dependency>

            <!-- junit -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${version.junit}</version>
                <scope>test</scope>
            </dependency>

            <!-- Sqlite -->
            <dependency>
                <groupId>org.xerial</groupId>
                <artifactId>sqlite-jdbc</artifactId>
                <version>${version.sqlite}</version>
            </dependency>

            <!-- Mybatis -->
            <dependency>
                <groupId>org.mybatis</groupId>
                <artifactId>mybatis</artifactId>
                <version>${version.mybatis}</version>
            </dependency>

            <!-- log -->
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>${version.commons.logging}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${version.slf4j.api}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-log4j12</artifactId>
                <version>${version.slf4j.log4j12}</version>
                <scope>runtime</scope>
            </dependency>
            <dependency>
                <groupId>log4j</groupId>
                <artifactId>log4j</artifactId>
                <version>${version.log4j}</version>
            </dependency>

            <!-- JavaFx 控件集 -->
            <dependency>
                <groupId>org.controlsfx</groupId>
                <artifactId>controlsfx</artifactId>
                <version>${version.controlsfx}</version>
            </dependency>
            <dependency>
                <groupId>org.controlsfx</groupId>
                <artifactId>openjfx-dialogs</artifactId>
                <version>${version.openjfx}</version>
            </dependency>


            <!-- 其他第三方 -->
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi</artifactId>
                <version>${version.poi}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi-ooxml</artifactId>
                <version>${version.poiooxml}</version>
            </dependency>
            <dependency>
                <groupId>org.jsoup</groupId>
                <artifactId>jsoup</artifactId>
                <version>${version.jsoup}</version>
            </dependency>
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>fastjson</artifactId>
                <version>${version.fastjson}</version>
            </dependency>
            <dependency>
                <groupId>org.beanshell</groupId>
                <artifactId>bsh</artifactId>
                <version>${version.beanshell}</version>
            </dependency>
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${version.guava}</version>
            </dependency>
            <dependency>
                <groupId>com.belerweb</groupId>
                <artifactId>pinyin4j</artifactId>
                <version>${version.pinyin4j}</version>
            </dependency>
            <dependency>
                <groupId>dom4j</groupId>
                <artifactId>dom4j</artifactId>
                <version>${version.dom4j}</version>
            </dependency>
            <dependency>
                <groupId>org.codehaus.jackson</groupId>
                <artifactId>jackson-mapper-asl</artifactId>
                <version>${version.jackson}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <finalName>${project.artifactId}-${project.version}</finalName>
        <!--<resources>-->
        <!--<resource>-->
        <!--<directory>src/main/resources</directory>-->
        <!--<targetPath>target/main/resources</targetPath>-->
        <!--</resource>-->
        <!--</resources>-->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
                <version>2.1</version>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>dependency-updates-report</report>
                            <report>plugin-updates-report</report>
                            <report>property-updates-report</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
</project>